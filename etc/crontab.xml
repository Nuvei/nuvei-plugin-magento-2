<?xml version="1.0"?>
<!--
/**
 * Nuvei Checkout crontab config.
 *
 * @category Nuvei
 * @package  Nuvei_Checkout
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="nuvei_delete_old_request_log"
             instance="Nuvei\Checkout\Cron\DeleteOldRequestLog"
             method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        
		<!-- At 00:00 on Sunday. -->
		<job name="nuvei_check_for_new_version"
             instance="Nuvei\Checkout\Cron\CheckForLatestVersion"
             method="execute">
            <schedule>0 0 * * 0</schedule>
        </job>
    </group>
</config>
